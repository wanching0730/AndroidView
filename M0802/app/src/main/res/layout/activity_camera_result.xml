<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_camera_layout">
    <Button
        android:id="@+id/btn_take_camera"
        android:layout_alignParentBottom="true"
        android:text="@string/btn_txt_take_camera"
        android:textSize="@dimen/app_tip_text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<ImageView
    android:scaleType="fitCenter"
    android:id="@+id/iv_camera_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/btn_take_camera"/>
</RelativeLayout>